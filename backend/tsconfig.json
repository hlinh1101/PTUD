{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler", // Hoặc "NodeNext" cũng thường được dùng với module ESNext
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "@cloudflare/workers-types",
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist" // <--- THÊM HOẶC ĐẢM BẢO DÒNG NÀY CÓ
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*"
  ] // <--- Đảm bảo include các file nguồn
}